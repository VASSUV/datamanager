<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbbbbb"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:background="#fff"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:gravity="end">
        <ImageView
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#c3f99c"
            android:onClick="applyTextEdit"
            android:layout_marginRight="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/check" />

        <ImageView

            android:id="@+id/button_exit_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d8da6a"
            android:layout_marginRight="4dp"
            android:onClick="openFullScrenTextEditer"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/fullscreen_exit" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_marginRight="4dp"
            android:onClick="onCloseTextEdit"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/close"
            android:tint="#fff" />
    </LinearLayout>


</LinearLayout>